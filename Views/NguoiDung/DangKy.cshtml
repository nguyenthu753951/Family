@model controller.Models.KHACH_HANG

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 style="color:black;text-align:left">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
            @Html.ValidationSummary(true) 
            <div class="form-group">
                @Html.LabelFor(model => model.MA_KH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.MA_KH, new { htmlAttributes = new { @class = "form-control" } })
                    @ViewData["Loi1"]
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MATKHAU_KH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.MATKHAU_KH, new { htmlAttributes = new { @class = "form-control" } })
                    @ViewData["Loi2"]
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TEN_KH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TEN_KH, new { htmlAttributes = new { @class = "form-control" } })
                    @ViewData["Loi3"]
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EMAIL_KH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.EMAIL_KH, new { htmlAttributes = new { @class = "form-control" } })
                    @ViewData["Loi4"]
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DIA_CHI_KH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.DIA_CHI_KH, new { htmlAttributes = new { @class = "form-control" } })
                    @ViewData["Loi5"]
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SDT_KH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.SDT_KH, new { htmlAttributes = new { @class = "form-control" } })
                    @ViewData["Loi6"]
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng Ký" class="btn btn-default" />
                </div>
            </div>
    }
</table>
