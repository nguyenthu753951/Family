@model controller.Models.KHACH_HANG

@{
    ViewBag.Title = "dangky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="checkout grid_16">
    <div class="newAccount grid_8 alpha">
        <h4>Create New Account</h4>
        @using (Html.BeginForm("dangky", "Nguoidung"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <fieldset class="w400">
                <div class="ipin4">
                    @Html.LabelFor(model => model.MA_KH, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.MA_KH, new { htmlAttributes = new { @class = "text " } })
                    <label style="color:red">
                        @ViewData["Loi1"]
                    </label>
                </div>

                <br />
                <div class="ipin4">
                    @Html.LabelFor(model => model.MATKHAU_KH, htmlAttributes: new { @class = "" })
                    @Html.PasswordFor(model => model.MATKHAU_KH, new { htmlAttributes = new { @class = "text " } })
                    <label style="color:red">
                        @ViewData["Loi2"]
                    </label>
                </div>
                <br />
                <div class="ipin4">
                    @Html.LabelFor(model => model.TEN_KH, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.TEN_KH, new { htmlAttributes = new { @class = "text" } })
                    <label style="color:red">
                        @ViewData["Loi3"]
                    </label>
                </div>
                <br />
                <div class="ipin4">
                    @Html.LabelFor(model => model.DIA_CHI_KH, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.DIA_CHI_KH, new { htmlAttributes = new { @class = "text" } })
                    <label style="color:red">
                        @ViewData["Loi5"]
                    </label>
                </div>
                <br />
                <div class="ipin4">
                    @Html.LabelFor(model => model.SDT_KH, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.SDT_KH, new { htmlAttributes = new { @class = "text" } })
                    <label style="color:red">
                        @ViewData["Loi6"]
                    </label>
                </div>
                <br />
                <div class="ipin4">
                    @Html.LabelFor(model => model.EMAIL_KH, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.EMAIL_KH, new { htmlAttributes = new { @class = "text" } })
                    <label style="color:red">
                        @ViewData["Loi4"]
                    </label>
                </div>
                <br>
                <div class="clear"></div>
            </fieldset>
            <input type="submit" value="Create New Account" tabindex="6" name="update" class="newAccountButton" />
        }
    </div>
    <div class="loginPage grid_8 omega">
        <h4>Login</h4>
        @using (Html.BeginForm("DangNhap", "Nguoidung"))
        {
                <h4 class="text-center" style="padding:15px;font-size:20px">Đăng nhập</h4>
                <h4 class="text-center" style="color:red">@ViewBag.Thongbao</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset class="w400">
                    <div>
                        <label for="email2">Tên đăng nhập:</label>
                        @Html.TextBox("TenDN")
                        <label style="color:red">
                            @ViewData["Loi1"]
                        </label>
                    </div>
                    <br />
                    <div>
                        <label for="password2">Mật khẩu:</label>
                        @Html.Password("MatKhau")
                        <label style="color:red">
                            @ViewData["Loi2"]
                        </label>
                    </div>
                    <br />
                    <div class="clear"></div>
                </fieldset>
                <p>
                    <input type="submit" value="Login" tabindex="3" name="update" class="userLogin" />
                </p>
                <input type="hidden" value="30" />
        }
    </div>
</div>
<style>
    .newAccount,
    .loginPage,
    .w400 {
        width: 400px;
    }
</style>

