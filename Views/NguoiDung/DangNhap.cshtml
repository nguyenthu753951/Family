@model controller.Models.KHACH_HANG

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .font_left{
        text-align:left;
        min-width:170px;
    }
</style>
<h4 style="color:black;text-align:left;padding:15px 0;">@ViewBag.ThongBao</h4>
<form align="center"style="width:1200px">
    <h3 style="text-align: center; font-weight: 700; padding: 15px 0 30px 0;">ĐĂNG NHẬP</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.MA_KH, htmlAttributes: new { @class = "font_left" })
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MATKHAU_KH, htmlAttributes: new { @class = "font_left" })
                @Html.Password("MatKhau")
                @ViewData["Loi2"]
            
        </div>
        <div class="form-group">
                <input type="submit" value="Đăng Nhập" class="btn btn-default" />
        </div>
    }
</form>