
@{
    ViewBag.Title = "Doimk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal" style="width:1200px">
        <h4 class="text-center" style="padding:15px;font-size:20px">Đăng nhập</h4>
        <h4 class="text-center" style="color:red">@ViewBag.Thongbao</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center">
            <div class="col-md-10">
                <label style="min-width:110px">Mật khẩu cũ</label>
                @Html.Password("mkcu")
                <label style="color:red">
                    @ViewData["Loi1"]
                </label>
            </div>
        </div>
        <div class="form-group text-center">
            <div class="col-md-10">
                <label style="min-width:110px;text-align:left">Mật khẩu mới</label>
                @Html.Password("mkmoi")
                <label style="color:red">
                    @ViewData["Loi2"]
                </label>
            </div>
        </div>
        <div style="display:flex; justify-content:center;align-items:center">
            <input type="submit" value="Đổi mật khẩu" class="btn btn-default" />
        </div>
    </div>
}

