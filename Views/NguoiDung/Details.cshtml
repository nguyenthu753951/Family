    <ul class="inf-user">
        <li class="inf-item">
            <h3 class="title-font">
                @Html.DisplayNameFor(model => model.TEN_KH):
            </h3>

            <p class="title-font-content">
                @Html.DisplayFor(model => model.TEN_KH)
            </p>
        </li>
        <li class="inf-item">
            <h3 class="title-font">
                @Html.DisplayNameFor(model => model.DIA_CHI_KH):
