@model IEnumerable<controller.Models.MENU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .img__food {
        width: 50px;
        margin-left: 8%;
        height: 50px;
    }
    
</style>
<h2>Quản lý sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TEN_MON)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GIA_MON)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LOAI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HINH_ANH)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TEN_MON)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GIA_MON)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LOAI)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.HINH_ANH)" class="img__food" alt="Alternate Text" />
            
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MA_MON_AN }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MA_MON_AN }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MA_MON_AN })
        </td>
    </tr>
}

</table>
