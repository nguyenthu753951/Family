@model controller.Models.PHIEU_GIAM_GIA

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>PHIEU_GIAM_GIA</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SO_PGG)

    <div class="form-group">
        Số Phiếu Giảm Giá
        <div class="col-md-10">
            @Html.DisplayFor(model => model.SO_PGG, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        Loại Phiếu Giảm Giá
        <div class="col-md-10">
            @Html.EditorFor(model => model.LOAI_PGG, new { htmlAttributes = new { @class = "form-control" } })
