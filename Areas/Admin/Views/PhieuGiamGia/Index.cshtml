@model IEnumerable<controller.Models.PHIEU_GIAM_GIA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý phiếu giảm giá</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Số Phiếu Giảm Giá
        </th>
        <th>
            Loại Phiếu Giảm Giá
        </th>
        <th>
            Hạn Sử Dụng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.SO_PGG)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LOAI_PGG)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HSD)
    </td>
    <td>
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.SO_PGG }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.SO_PGG }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.SO_PGG })
    </td>
</tr>
}

</table>
